<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- MechGiantSword --> <!-- Inspired by "Tang Dao"; Scale: 73.2:26.9.:3.2 ; length: 2.5m-->
  <!-- Human's average strength may the Scyther's x0.6 multipler (SteelLongsword(Slash):3.24MPa ScytherBlade(slash)ï¼š5.4). (Ignore the overpowered(ScytherStab):20MPa)) -->
  <ThingDef ParentName="BaseWeapon">
    <defName>SS_Weapon_MechGiantSword_Melee</defName>
    <label>mech giant sword</label>
    <description>The melee combat powered weapon of Giant Mechanoids, the longsword can be used for slashing or stabbing heavy-armored targets. But in Giant Mechanoid's hand, it's also performs as a good breaching tool.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
        <texPath>Things/Item/Equipment/WeaponMelee/Tex_MechGiantSword</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>1.75</drawSize>
    </graphicData>

    <techLevel>Spacer</techLevel>
    <smeltable>false</smeltable>
    <burnableByRecipe>true</burnableByRecipe>

	<tradeability>None</tradeability>
	<destroyOnDrop>true</destroyOnDrop>
	<relicChance>0</relicChance>

    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <weaponTags>
        <li>MechanoidMeleeHeavy</li>
        <li>MechGiantSword</li>
    </weaponTags>
	<weaponClasses>
        <li>Melee</li>
	</weaponClasses>

	<statBases>
      <MarketValue>8330</MarketValue>  <!-- sincerely calculated -->
      <Mass>6.12</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>

    <tools>  <!-- DevTest: def a Sword with Demolish(breathAxe-like) damage, after all megabots have megastrengh, right? -->
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Demolish</def>
            <amount>5</amount>
          </li>
        </extraMeleeDamages>
        <armorPenetration>0.3</armorPenetration>
        <chanceFactor>0.1</chanceFactor>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>72</power> <!-- That's why should all Pawns keep distance with Executioner -->
        <cooldownTime>1.65</cooldownTime>
        <armorPenetration>1.02</armorPenetration>
        <extraMeleeDamages>
          <li>
            <def>Demolish</def>
            <amount>15</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>160</power>
        <cooldownTime>1.45</cooldownTime>
        <armorPenetration>0.75</armorPenetration>
        <extraMeleeDamages>
          <li>
            <def>Demolish</def>
            <amount>15</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>

  </ThingDef>

</Defs>