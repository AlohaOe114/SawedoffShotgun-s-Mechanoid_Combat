<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Mech_Executioner -->
	<!-- Note: (Solving)In vanilla its somewhat OP. But in CE... a bigger gunpowder *shrug* -->
	<ThingDef ParentName="BaseMechanoidWalker">
	    <defName>SS_Mech_Executioner</defName>
		<label>executioner</label>
		<description>An ultra-heavy but fast melee combat mechanoid with a Giant Blade Made for siegebreaking or melee combat and with a built-in shield bubble generator.\n\nThe diabolus dissipates the hellsphere cannon's waste power in a heat column mounted on its back, which can pulse to ignite flammable objects nearby.\n\nThis mech's name comes from a thousand-year-old poem written by a Haspian monk who survived the erasure of his monastery. His religiously-tinged work describes a razor-bodied fiend pulsing with flesh-searing heat as it crushed scorched bodies under massive claws. The few who have faced a diabolus and survived tend to agree with this depiction.</description>

		<statBases>
			<EMPResistance>0.5</EMPResistance>
		    <MoveSpeed>4.0</MoveSpeed>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
            <ArmorRating_Sharp>1.2</ArmorRating_Sharp>  <!-- centipede * 1.35 -->

			<EnergyShieldRechargeRate>0.5</EnergyShieldRechargeRate>
			<EnergyShieldEnergyMax>4</EnergyShieldEnergyMax>
            <MeleeDoorDamageFactor>1.0</MeleeDoorDamageFactor>

            <PsychicSensitivity>0.75</PsychicSensitivity>
            <BandwidthCost MayRequire="Ludeon.RimWorld.Biotech">5</BandwidthCost>
            <MechEnergyLossPerHP  MayRequire="Ludeon.RimWorld.Biotech">0.2</MechEnergyLossPerHP>
		</statBases>

		<killedLeavingsPlayerHostile MayRequire="Ludeon.RimWorld.Biotech">
			<SignalChip>1</SignalChip>
		</killedLeavingsPlayerHostile>

	    <tools>
              <li>
                <label>left fist</label>
                <labelNoLocation>fist</labelNoLocation>
                <capacities>
                  <li>Blunt</li>
                </capacities>
                <power>30.0</power> <!-- 24 -->
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
              </li>
              <li>
                <label>right fist</label>
                <labelNoLocation>fist</labelNoLocation>
                <capacities>
                  <li>Blunt</li>
                </capacities>
                <power>30.0</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
              </li>
              <li>
                <label>head</label>
                <capacities>
                  <li>Blunt</li>
                </capacities>
                <power>20</power>
                <cooldownTime>2.6</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.1</chanceFactor>
              </li>
        </tools>


		<race>
			<body>Scyther</body>
			<baseBodySize>4.0</baseBodySize>
			<baseHealthScale>6</baseHealthScale> <!-- In vanilla its somewhat OP. But in CE... a bigger gunpowder *shrug* -->

			<![CDATA[

			<lifeStageAges>
				<li>
				  <def>MechanoidFullyFormed</def>
				  <minAge>0</minAge>
				  <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
				  <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
				  <soundCall>Pawn_Mech_Scyther_Call</soundCall>
				</li>
				<li MayRequire="Ludeon.RimWorld.Biotech">
				  <def>MechanoidFullyFormed</def>
				  <minAge>100</minAge>
				  <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
				  <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
				  <soundCall>Pawn_Mech_Scyther_Call</soundCall>
				</li>
			  </lifeStageAges>

			]]>

			<detritusLeavings>
			  <li>
				<def>ChunkMechanoidSlag</def>
				<texOverrideIndex>3</texOverrideIndex>
				<spawnChance>0.75</spawnChance>
			  </li>
			  <li>
				<def>ChunkMechanoidSlag</def>
				<texOverrideIndex>17</texOverrideIndex>
				<spawnChance>0.75</spawnChance>
			  </li>
			  <li>
				<def>ChunkMechanoidSlag</def>
				<texOverrideIndex>1</texOverrideIndex>
				<spawnChance>0.75</spawnChance>
			  </li>
			</detritusLeavings>

		</race>

		<comps>
			<li Class="CompProperties_Shield" /> <!-- built-in shield -->
				<startingTicksToReset>36000</startingTicksToReset><!-- 10 mins -->
				<minDrawSize>2.5</minDrawSize>
				<maxDrawSize>2.8</maxDrawSize>
				<energyLossPerDamage>0.01</energyLossPerDamage>
				<energyOnReset>4.0</energyOnReset>
				<blocksRangedWeapons>false</blocksRangedWeapons>
			<li Class="CompProperties_TurretGun">
			  <turretDef>Gun_ChargeBlasterTurret</turretDef>
			  <angleOffset>-90</angleOffset>
			  <renderNodeProperties>
				<li>
				  <nodeClass>PawnRenderNode_TurretGun</nodeClass>
				  <workerClass>PawnRenderNodeWorker_TurretGun</workerClass>
				  <parentTagDef>Body</parentTagDef>
				  <overrideMeshSize>(1, 1)</overrideMeshSize>
				  <baseLayer>20</baseLayer>
				  <pawnType>Any</pawnType>
				  <drawData>
					<dataWest>
					  <rotationOffset>180</rotationOffset>
					</dataWest>
				  </drawData>
				</li>
			  </renderNodeProperties>
			</li>
		</comps>

        <!--
        <butcherProducts>
          <Steel>30</Steel>
          <Plasteel>10</Plasteel>
        </butcherProducts>
        -->

	</ThingDef>
	
	<PawnKindDef ParentName="HeavyMechanoidKind">
		<defName>SS_Mech_Executioner</defName>
		<label>executioner</label>
		<race>SS_Mech_Executioner</race>
		<combatPower>500</combatPower>
		<maxPerGroup>3</maxPerGroup>
		<isBoss>true</isBoss>
		<allowInMechClusters>false</allowInMechClusters>


		<lifeStages>
			<li MayRequire="Ludeon.RimWorld.Biotech">
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/ScytherClean</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Scyther</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3.0</drawSize>
					<shadowData>
						<volume>(0.7, 0.8, 0.7)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/Scyther</texPath>
					<maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Scyther</maskPath>
					<shaderType>CutoutWithOverlay</shaderType>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3.0</drawSize>
					<shadowData>
						<volume>(0.7, 0.8, 0.7)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>

		<defendPointRadius>0</defendPointRadius>
		<![CDATA[
		<weaponMoney>9999~9999</weaponMoney>


        <techHediffsChance>1</techHediffsChance>
        <techHediffsMoney>9999~9999</techHediffsMoney>
		]]>


		<weaponTags>
			<li>MechanoidGiantBlade</li>
		</weaponTags>


		<abilities>
			<li>SmokepopMech</li>

			<!-- WIP -->
			<!--
				<li>Overload</li>
			-->

		</abilities>

        <!--
		<aiAvoidCover>true</aiAvoidCover>
		-->
	</PawnKindDef>

</Defs>